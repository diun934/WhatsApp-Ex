<Window x:Class="all_on_whatsapp.View.NewMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:all_on_whatsapp.View"  ShowInTaskbar="False"  Deactivated="Window_Deactivated"
        mc:Ignorable="d" AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        Title="NewMessage" Height="450" Width="535">
    <Grid Width="535" Style="{StaticResource FadeGridStyle}" x:Name="NewMessageBox_v1" Visibility="Visible" Height="Auto" HorizontalAlignment="Left" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Canvas Grid.Column="0" Width="50" Height="250" VerticalAlignment="Bottom">
            <Path Fill="#F0D3D3D3" Data="M 25 0 L 0 25 L 25 50 Z" Canvas.Left="0" Canvas.Top="100"/>
        </Canvas>

        <Border Grid.Column="1" MinHeight="250" MinWidth="450" Margin="0,5,5,5" Width="450" HorizontalAlignment="Left" VerticalAlignment="Bottom" CornerRadius="8" MaxHeight="530">

        </Border>
    </Grid>
</Window>
